<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>
	<managed-bean>
		<managed-bean-name>quarterMain</managed-bean-name>
		<managed-bean-class>
			travel.jsf.mBeans.bBeans.trip.quarters.QuarterMain
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>facade</property-name>
			<value>#{externalFacade}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>appCtx</managed-bean-name>
		<managed-bean-class>
			travel.jsf.mBeans.AppContext
		</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
		<managed-property>
			<property-name>imgRes</property-name>
			<property-class>java.lang.String</property-class>
			<value>web/main/images</value>
		</managed-property>
		<managed-property>
			<property-name>cssRes</property-name>
			<property-class>java.lang.String</property-class>
			<value>web/main/css</value>
		</managed-property>
	</managed-bean>
	
	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<locale-config>
			<default-locale>pl</default-locale>
			<supported-locale>pl</supported-locale>
		</locale-config>
		 <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
	</application>
</faces-config>
